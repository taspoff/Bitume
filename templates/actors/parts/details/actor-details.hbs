<div class="flexrow header-details">
    <div class="flex1 layout" style="margin-right: 5px;">
        <!-- NAME -->
        <div class="flexrow">
            <div class="flex1 center cell-header">
                <span class="field-label">{{ localize 'COC.details.name' }}</span>
            </div>
            <div class="flex2 center cell">
                <input class="name" name="name" type="text" value="{{actor.name}}" placeholder="Name" data-dtype="String"/>
            </div>
        </div>
        <!-- /NAME -->
        <!-- LEVEL -->
        {{#if (isNotLimited @root)}}
            <div class="flexrow">
                <div class="flex1 center cell-header">
                    <span class="field-label">{{ localize 'COC.attributes.level.label' }}</span>
                </div>
                <div class="flex2 center cell">
                    <input class="level" name="data.level.value" type="text" value="{{actor.data.level.value}}" placeholder="Level" data-dtype="Number"/>
                </div>
            </div>
        {{/if}}
        <!-- /LEVEL -->
    </div>
    <div class="flex1 layout">        
        {{#if (isNotLimited @root)}}
            <!-- TRAIT -->
            <div class="flexrow">
                <div class="flex1 center cell-header">
                    <span class="field-label">Trait</span>
                </div>
                <div class="flex2 center cell drop-field compendium-pack" data-pack="coc.traits" data-open="0" title="clic droit pour ouvrir le compendium">
                    {{#with trait}}
                        <div class="flex5 drop-item item-name item trait" data-item-id="{{_id}}" style="background-image: url('{{img}}'); background-size: 26px 26px; background-repeat: no-repeat">{{name}}</div>
                        <div class="item" data-item-id="{{_id}}" style="padding-right:5px;">
                            <a class="item-control item-delete" title="Delete Item"><i class="fas fa-times"></i></a>
                        </div>
                    {{/with}}
                </div>
            </div>
            <!-- /TRAIT -->
            <!-- PROFILE -->        
            <div class="flexrow">
                <div class="flex2 center cell-header">
                    <span class="field-label">{{ localize 'COC.details.profile' }}</span>
                </div>
                <div class="flex4 center cell drop-field compendium-pack item" data-item-id="{{profile._id}}" data-pack="coc.profiles" data-open="0" title="clic droit pour ouvrir le compendium">
                {{#with profile}}
                    <div class="flex5 drop-item item-name item profile item-edit" data-item-id="{{_id}}" style="background-image: url('{{img}}'); background-size: 26px 26px; background-repeat: no-repeat">{{name}}</div>
                    <div class="item" data-item-id="{{_id}}" style="padding-right:5px;">
                    <a class="item-control item-delete" title="Delete Item"><i class="fas fa-times"></i></a>
                </div>
                {{/with}}
                </div>       
            </div>
            <!-- /PROFILE -->
        {{/if}}
    </div>
</div>
